class Solution {
public:
    int minimumBoxes(vector<int>& apple, vector<int>& capacity) {
        long long total = 0;
        for(int x : apple) total += x;
        sort(capacity.begin(), capacity.end(), greater<int>());
        int ans = 0;
        for(int c : capacity) {
            if(total <= 0) break;
            total -= c;
            ans++;
        }
        return ans;
    }
};
